{
    "compilerOptions": {
        "module": "CommonJs",
        "target": "ES5",
        "noImplicitAny": false,
        "sourceMap": true,
        "experimentalDecorators": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "moduleResolution": "node",
        // "traceResolution": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "outDir": "build",
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": "./"
    },
    "exclude": [
        "node_modules",
        "**/serverless/lambda/**/*.spec.ts"
    ],
    "include": [
        "**/serverless/lambda/**/*.ts"
    ]
}